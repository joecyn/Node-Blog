<body>
    <%- include('../../partials/Dash'); %>
   <div class="new_post">
    <form action="/admin/newPost"  method="post" enctype="multipart/form-data">
        <h1>NEW POST</h1>
        <div>
            <input type="text" placeholder="Title" name="title" required/>
        </div>
        <div>
            <input  type="text"  name="category" placeholder="Category" required/>
        </div>
       <div>
